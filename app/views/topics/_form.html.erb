<%= form_for topic do |f| %>

  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: "What's Topic" %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, class: 'form-control', rows: 7, placeholder: "Topic introduction" %>
  </div>

  <div class="form-group">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>

  <div class="form-group">
    <%= link_to 'Back', topics_path, class: 'btn btn-warning' %>
  </div>
<% end %>
