<div class="col-sm-3 offset-sm-1 blog-sidebar">
  <div class="sidebar-module sidebar-module-inset">
    <h4>About</h4>
    <p><%= @brief_about %></p>
  </div>

  <%= source_helper("alert alert-info blog-sidebar-source") %>

  <div class="sidebar-module">
    <h4>New publish</h4>
    <% @side_bar_topics.each do |topic| %>
      <ul><%= link_to fa_icon('book') + topic.title, topic %>
      <li><%= link_to "[New]" + topic.blogs.last.title, topic.blogs.last %></li>
    </ul>
    <% end %>
  </div>

  <div class="sidebar-module">
    <h4>Elsewhere</h4>
    <ol class="list-unstyled social-links">
      <li><a href="https://github.com/A-hu" target='_blank'><%= fa_icon "github" %></a></li>
      <li><a href="https://www.linkedin.com/in/louis-j-tseng-78745b134/" target='_blank'><%= fa_icon "linkedin" %></a></li>
      <li><a href="https://twitter.com/louis0911317399" target='_blank'><%= fa_icon "twitter" %></a></li>
    </ol>
  </div>
</div>
