<div class="inner cover">
  <h1>Hi, <%= current_user.first_name if current_user %></h1>
  <h1 class="cover-heading">AWS news</h1>

  <div class="row">
    <% @tweets.each do |tweet| %>
      <div class="col-md-6">
        <div class="tech-news">
          <div class="card">
            <%= twitter_parser tweet %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

